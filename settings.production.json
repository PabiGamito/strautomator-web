// STRAUTOMATOR WEB SETTINGS (PRODUCTION)

{
    "api": {
        // Secure token that should be passed as a "Strautomator-Key" header
        // on API requests marked for administrators only. This MUST be set
        // via private settings or via the $STA_API_api_adminToken environment variable.
        "adminToken": null
    },
    "app": {
        "title": "Strautomator",
        // Please note that the server expects the files strautomator.cert and strautomator.key
        // on the app root to start a HTTPS server. If these files are not there, server will
        // listen on HTTP instead (but still using port 8443).
        "port": 8443,
        // You can set the app URL on your settings.private.json file or
        // via the $STA_app_url environment variable.
        "url": "https://strautomator.com/"
    }
}
